.btn-group.pull-right
  %button.btn.btn-success.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
    =t("integrations.add")
    %span.caret
  %ul.dropdown-menu
    %li
      =link_to t("integrations.intercom"), "/auth/intercom"
%h1=t("integrations.all")


%table.table
  %tr
    %th
      =t("integration.provider")
    %th
      =t("integration.connected_at")
    %th
    %th

  -@integrations.each do |i|
    %tr
      %td
        =link_to i.provider, [i, Metric]
      %td
        =I18n.l i.created_at, format: :long
      %td
        =i.token
      %td
        =link_to t('action.remove'), i, method: :delete, data: {confirm: "Sure?"}

